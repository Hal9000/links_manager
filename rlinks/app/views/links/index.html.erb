<p id="notice"><%= notice %></p>

<h1>Links Manager</h1>
<hr>

<br>
<%= link_to 'Create a new link', new_link_path %>

<br>
<br>

<table>
  <thead>
    <tr>
      <th align=left>Title</th>
      <th></th>
      <th align=left>Description</th>
      <th align=left>URL</th>
      <th align=left>Categories</th>
      <th align=left>Tags</th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td>
           <%= 
             title = link.title.truncate(30, separate: ' ')
             title = raw("<b>#{title}</b>") if title =~ /NEEDS/
             title
            %>
        <td>
           <%= link_to(link) { image_tag "eye.png", size: 16 } %>
           <%= link_to(edit_link_path(link)) { image_tag "pencil.png", size: 16 } %>
           <%= link_to(link.link, target: "external") { image_tag "www.png", size: 16 } %>
           <%= link_to(link, method: :delete, data: { confirm: 'Are you sure?' }) do
                 image_tag "redx.png", size: 16 end
           %>
        </td>
        <td>
           <%= 
             desc = link.desc.truncate(30, separate: ' ')
             desc = raw("<b>#{desc}</b>") if desc =~ /NEEDS/
             desc
            %>
        </td>
        <td><%= link.link.truncate(35) %></td>
        <% cats = link.categories.all.map {|x| x.title } 
           tags = link.tags.all.map {|x| x.tag } 
           cats -= ["No category..."]
           tags -= ["NEEDS_TAGS"]
           catsum = cats.empty? ? "NONE" : cats.size
           tagsum = tags.empty? ? "NONE" : tags.size
        %>
        <td><%= catsum %></td>
        <td><%= tagsum %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create a new link', new_link_path %>
