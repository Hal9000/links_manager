<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<br>
<%= link_to 'New tag', new_tag_path %>
<br>
<br>

<hr>

<table>
  <!--
  <thead>
    <tr>
      <th align=left>>Tag</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  -->

  <tbody>
    <% all_tags = @tags.sort {|x,y| x.tag.downcase <=> y.tag.downcase } %>
    <% all_tags.each_slice(5) do |tags| %>
      <tr>
      <% tags.each do |tag| %>
          <td><%= link_to(edit_tag_path(tag)) { image_tag "pencil.png", size: 16 } %>
              <%= link_to(tag, method: :delete, data: { confirm: 'Are you sure?' }) do
                   image_tag "redx.png", size: 16 end
              %>
          </td>
          <td><%= tag.tag %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

